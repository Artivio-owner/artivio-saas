generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * --------------------------------------------
 * ENUMS
 * --------------------------------------------
 */

enum SaasPlan {
  FREE
  BASIC
  PRO
}

enum NotificationType {
  LOW_STOCK
  ORDER_ERROR
  SYSTEM
}

enum StockMovementType {
  IN
  OUT
  RESERVE
  RELEASE
}

/**
 * --------------------------------------------
 * CORE
 * --------------------------------------------
 */

model Company {
  id        String   @id @default(uuid())
  name      String
  plan      SaasPlan @default(FREE)

  users         User[]
  warehouses    Warehouse[]
  notifications Notification[]
  telegram      TelegramIntegration?

  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  companyId String

  company Company @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
}

/**
 * --------------------------------------------
 * WAREHOUSES
 * --------------------------------------------
 */

model Warehouse {
  id        String   @id @default(uuid())
  name      String
  companyId String

  company Company @relation(fields: [companyId], references: [id])
  stocks  WarehouseStock[]
  moves   StockMovement[]

  createdAt DateTime @default(now())
}

model WarehouseStock {
  id          String   @id @default(uuid())
  warehouseId String
  productId   String?
  materialId  String?
  quantity    Int
  reserved    Int

  warehouse Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([warehouseId, productId, materialId])
}

model StockMovement {
  id          String            @id @default(uuid())
  warehouseId String
  productId   String?
  materialId  String?
  type        StockMovementType
  quantity    Int
  reason      String?

  warehouse Warehouse @relation(fields: [warehouseId], references: [id])

  createdAt DateTime @default(now())
}

/**
 * --------------------------------------------
 * ORDERS
 * --------------------------------------------
 */

model Order {
  id          String   @id @default(uuid())
  companyId   String
  warehouseId String
  status      String
  totalAmount Float

  items OrderItem[]

  createdAt DateTime @default(now())
  shippedAt DateTime?

  company   Company   @relation(fields: [companyId], references: [id])
  warehouse Warehouse @relation(fields: [warehouseId], references: [id])
}

model OrderItem {
  id        String @id @default(uuid())
  orderId  String
  productId String
  quantity Int
  price    Float

  order Order @relation(fields: [orderId], references: [id])
}

/**
 * --------------------------------------------
 * NOTIFICATIONS
 * --------------------------------------------
 */

model Notification {
  id        String           @id @default(uuid())
  companyId String
  type      NotificationType
  title     String
  message   String
  meta      Json?
  isRead    Boolean          @default(false)

  company   Company @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
}

/**
 * --------------------------------------------
 * TELEGRAM
 * --------------------------------------------
 */

model TelegramIntegration {
  id        String  @id @default(uuid())
  companyId String @unique
  chatId    String
  isActive  Boolean @default(true)

  company Company @relation(fields: [companyId], references: [id])
}