generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ------------------------------------------------
 * BASE MODELS
 * ------------------------------------------------
 */

model Company {
  id          String      @id @default(uuid())
  name        String
  createdAt  DateTime    @default(now())

  warehouses  Warehouse[]
}

model Product {
  id          String   @id @default(uuid())
  companyId   String
  name        String

  stocks      WarehouseStock[]
}

model Material {
  id          String   @id @default(uuid())
  companyId   String
  name        String

  stocks      WarehouseStock[]
}

/**
 * ------------------------------------------------
 * WAREHOUSES
 * ------------------------------------------------
 */

model Warehouse {
  id         String       @id @default(uuid())
  companyId  String
  name       String
  type       WarehouseType
  address    String?
  isActive   Boolean      @default(true)
  createdAt DateTime     @default(now())

  company    Company      @relation(fields: [companyId], references: [id])
  stocks     WarehouseStock[]
  movements  StockMovement[]

  @@index([companyId])
}

model WarehouseStock {
  id           String   @id @default(uuid())
  warehouseId  String
  productId    String?
  materialId   String?
  quantity     Int
  reserved     Int      @default(0)
  updatedAt    DateTime @updatedAt

  warehouse    Warehouse @relation(fields: [warehouseId], references: [id])
  product      Product?  @relation(fields: [productId], references: [id])
  material     Material? @relation(fields: [materialId], references: [id])

  @@unique([warehouseId, productId, materialId])
}

model StockMovement {
  id           String             @id @default(uuid())
  warehouseId  String
  productId    String?
  materialId   String?
  type         StockMovementType
  quantity     Int
  reason       String?
  createdAt    DateTime           @default(now())

  warehouse    Warehouse @relation(fields: [warehouseId], references: [id])

  @@index([warehouseId])
  @@index([createdAt])
}

/**
 * ------------------------------------------------
 * ENUMS
 * ------------------------------------------------
 */

enum WarehouseType {
  MAIN
  PRODUCTION
  TRANSIT
}

enum StockMovementType {
  IN
  OUT
  RESERVE
  RELEASE
  ADJUST
}

/**
 * ------------------------------------------------
 * NOTIFICATIONS
 * ------------------------------------------------
 */

model Notification {
  id        String           @id @default(uuid())
  companyId String
  type      NotificationType
  title     String
  message   String
  meta      Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  company   Company          @relation(fields: [companyId], references: [id])

  @@index([companyId])
  @@index([type])
  @@index([createdAt])
}

enum NotificationType {
  LOW_STOCK
  ORDER_ERROR
  SYSTEM
}