/**
 * ============================================
 * ARTIVIO — PRISMA SCHEMA
 * File: schema.prisma
 * ============================================
 */

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =====================================================
   КОМПАНИИ (SaaS-ИЗОЛЯЦИЯ)
   ===================================================== */
model Company {
  id            String   @id @default(uuid())
  name          String
  domain        String?
  isActive      Boolean  @default(true)
  tariff        String   @default("FREE")
  tariffUntil   DateTime?
  createdAt     DateTime @default(now())

  employees     Employee[]
  clients       Client[]
  products      Product[]
  orders        Order[]
  expenses      Expense[]
}

/* =====================================================
   СОТРУДНИКИ
   ===================================================== */
model Employee {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  email         String   @unique
  name          String
  role          String
  passwordHash  String
  isActive      Boolean  @default(true)

  productionStages ProductionStage[]

  createdAt     DateTime @default(now())
}

/* =====================================================
   КЛИЕНТЫ
   ===================================================== */
model Client {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  email         String?  @unique
  phone         String?
  name          String
  passwordHash  String?

  autoTags      String[]
  internalTag   String?
  createdByAdmin Boolean @default(false)

  orders        Order[]

  createdAt     DateTime @default(now())
}

/* =====================================================
   ТОВАРЫ
   ===================================================== */
model Product {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  name          String
  description   String?
  price         Float
  costPrice     Float?

  labels        String[]   // Маркетплейс-метки
  isActive      Boolean @default(true)

  orderItems    OrderItem[]

  createdAt     DateTime @default(now())
}

/* =====================================================
   ЗАКАЗЫ
   ===================================================== */
model Order {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  clientId      String
  client        Client   @relation(fields: [clientId], references: [id])

  status        String
  totalPrice    Float

  isVip         Boolean @default(false)

  paidAt        DateTime?
  completedAt   DateTime?

  items         OrderItem[]

  createdAt     DateTime @default(now())
}

/* =====================================================
   ПОЗИЦИИ ЗАКАЗА
   ===================================================== */
model OrderItem {
  id            String   @id @default(uuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id])

  productId     String
  product       Product  @relation(fields: [productId], references: [id])

  quantity      Int

  productionStages ProductionStage[]
}

/* =====================================================
   ПРОИЗВОДСТВЕННЫЕ ЭТАПЫ
   ===================================================== */
model ProductionStage {
  id            String   @id @default(uuid())

  orderItemId   String
  orderItem     OrderItem @relation(fields: [orderItemId], references: [id])

  employeeId    String
  employee      Employee  @relation(fields: [employeeId], references: [id])

  stageName     String
  status        String

  startedAt     DateTime?
  completedAt   DateTime?
}

/* =====================================================
   РАСХОДЫ
   ===================================================== */
model Expense {
  id            String   @id @default(uuid())
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id])

  title         String
  amount        Float
  date          DateTime

  createdAt     DateTime @default(now())
}